<!--หน้ายืมอุปกรณ์-->
<%
const _member = member || null;
const _inv    = Array.isArray(inventory) ? inventory : [];
const _loans  = Array.isArray(loans) ? loans : [];
const today   = new Date().toISOString().slice(0,10);
%>
<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title>การยืมอุปกรณ์</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body{font-family:'Prompt',sans-serif;background:#F5F6FA;color:#111}
    .wrap{max-width:460px;margin:28px auto;background:#fff;border-radius:18px;box-shadow:0 10px 25px rgba(0,0,0,.08);padding:26px}
    h1{text-align:center;font-weight:600;margin:8px 0 18px}
    .card-inner{border:1px solid #e5e7eb;border-radius:16px;padding:22px;background:#fff}
    .avatar{width:110px;height:110px;border-radius:22px;margin:0 auto 14px;background:linear-gradient(180deg,#fff,#f7f7f9);display:flex;align-items:center;justify-content:center;box-shadow:0 12px 24px rgba(17,24,39,.08)}
    .avatar svg{width:58px;height:58px;color:#9ca3af}
    .label{font-size:.9rem;color:#6b7280;margin-bottom:6px}
    .form-control,.form-select{border-radius:12px;border:1px solid #e5e7eb;padding:.7rem .9rem}
    .btn-accent{background:#fbbf24;border:none;color:#111;border-radius:999px;padding:.8rem 1rem;font-weight:600;box-shadow:0 8px 18px rgba(251,191,36,.35)}
    .list-mini{border:1px dashed #e5e7eb;border-radius:12px;padding:10px 12px;background:#FCFCFD}
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-3">การยืมอุปกรณ์</h1>
    <div class="wrap">
      <div class="card-inner mb-3">

        <% if (typeof message === 'string' && message) { %>
          <div class="alert alert-warning">ไม่พบข้อมูลสมาชิก
            <a href="/staff-home" class="alert-link">กลับไปสแกนใหม่</a>
          </div>
        <% } %>

        <div class="avatar">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.4"
              d="M15.75 7.5a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.5 19.5a7.5 7.5 0 0 1 15 0"/>
          </svg>
        </div>
        <div class="text-center mb-3">
          <div class="text-muted">สมาชิก</div>
          <div class="fw-semibold"><%= _member ? _member.full_name : '-' %></div>
        </div>

        <form method="post" action="/borrow/submit" class="mt-2" id="borrow">
          <div class="mb-3">
            <div class="label">วันที่</div>
            <input type="date" name="borrow_date" class="form-control" value="<%= today %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">อุปกรณ์</label>
            <select name="inventory_id" id="inv" class="form-select" required>
              <% if (!_inv.length) { %>
                <option value="">— ไม่มีอุปกรณ์พร้อมยืม —</option>
              <% } else { _inv.forEach(i => { %>
                <option value="<%= i.id %>" data-stock="<%= i.stock %>">
                  <%= i.name %> (คงเหลือ <%= i.stock %>)
                </option>
              <% }) } %>
            </select>
          </div>

          <div class="mb-2">
            <div class="label">จำนวน</div>
            <select name="qty" class="form-select" required id="qty"></select>
          </div>

          <input type="hidden" name="member_id" value="<%= _member ? _member.id : '' %>">
          <button class="btn btn-accent w-100 mt-3" type="submit">บันทึก</button>
        </form>
      </div>

      <% if (_loans.length) { %>
  <div class="list-mini">
    <div class="fw-semibold mb-2">รายการที่ยังไม่คืน</div>
    <ul class="mb-0">
      <% _loans.forEach(l => { %>
        <li><%= l.name %> × <%= l.qty %> 
          <span class="text-muted">ยืมเมื่อ <%= new Date(l.borrow_date).toLocaleDateString() %></span>
        </li>
      <% }) %>
    </ul>
  </div>
<% } %>

    </div>
  </div>

  <script>
    (function(){
      const selInv = document.getElementById('inv');
      const selQty = document.getElementById('qty');
      if (!selInv || !selQty) return;
      function rebuildQty(){
        const opt = selInv.options[selInv.selectedIndex];
        const stock = parseInt(opt?.dataset.stock || '0', 10);
        const max = Math.max(1, Math.min(stock, 10));
        selQty.innerHTML = '';
        for (let n=1; n<=max; n++){
          const o = document.createElement('option');
          o.value = n; o.textContent = n;
          selQty.appendChild(o);
        }
      }
      rebuildQty();
      selInv.addEventListener('change', rebuildQty);
    })();
  </script>
</body>
</html>
