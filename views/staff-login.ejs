<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title>เข้าสู่ระบบเจ้าหน้าที่</title>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container" style="max-width:480px;margin-top:80px">
    <div class="card shadow p-4">
      <h3 class="mb-3 text-center">เข้าสู่ระบบเจ้าหน้าที่</h3>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <!-- ให้ตรงกับ app.post('/staff-login') ที่รับ email -->
      <form method="post" action="/staff-login" class="vstack gap-3">
    <input class="form-control" type="email" name="email" placeholder="อีเมลเจ้าหน้าที่" required>
    <button class="btn btn-primary w-100" type="submit">เข้าสู่ระบบ</button>
    </form>
    </div>
  </div>
</body>
</html>
