<!--เพิ่ม + Updata รายการอุปกรณ์-->
<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>เพิ่มอุปกรณ์</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;600&display=swap" rel="stylesheet">
</head>
<body class="bg-light" style="font-family:'Prompt',sans-serif">
  <div class="container" style="max-width:560px">
    <div class="card mt-4">
      <div class="card-body">
        <h4 class="mb-3">เพิ่มอุปกรณ์</h4>

        <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>
        <% if (success) { %><div class="alert alert-success"><%= success %></div><% } %>

        <form method="post" action="/staff/inventory/new">
  <div class="mb-3">
    <label class="form-label">ชื่ออุปกรณ์</label>
    <input type="text" name="name" class="form-control" required value="<%= form?.name || '' %>">
  </div>
  <div class="mb-3">
    <label class="form-label">สต็อกเริ่มต้น</label>
    <input type="number" name="stock" class="form-control" min="0" step="1" required value="<%= form?.stock || 0 %>">
  </div>
  <div class="d-flex gap-2">
    <a class="btn btn-outline-secondary" href="/staff/inventory">กลับ</a>
    <button type="submit" class="btn btn-primary">บันทึก</button>
  </div>
</form>
      </div>
    </div>
  </div>
</body>
</html>
